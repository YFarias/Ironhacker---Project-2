<form id="form" action="/edit" method="POST" class="" enctype="multipart/form-data">
<h1>Edit profile</h1>


<label for="picture"> img
  <input type="file" name="profile-picture"  value="{{user.profilePicture}}"/>
 
</label>
    <br>
  
  <label for="username">Username</label>
  <input type="text" name="username" value="{{user.username}}" />
  <br>


  <button type="submit">Submit</button>
</form>


{{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
{{/if}}