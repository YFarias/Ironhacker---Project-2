<link rel="stylesheet" href="/stylesheets/profile-style.css" />

<div class="edit-container">
      
    <form id="form" action="/edit" method="POST" class="edit-profile" enctype="multipart/form-data">
      <h1>Edit profile</h1>
        <label for="picture"><h3>Image</h3>
    <div class="imgProfile">
        <input type="file" name="profile-picture"  value="{{user.profilePicture}}"/>
    </div>
    
    </label>
        <br>
      
    <label for="username"><h3>Username</h3></label>
    <input type="text" name="username" value="{{user.username}}" />
      <br>


    <button class="edit-button" type="submit">Submit</button>
</form>

</div>


{{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
{{/if}}